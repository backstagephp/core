{
    "name": "vormkracht10/backstage",
    "description": "CMS for building the modern web.",
    "keywords": [
        "vormkracht10",
        "laravel",
        "backstage"
    ],
    "homepage": "https://github.com/vormkracht10/backstage",
    "support": {
        "issues": "https://github.com/vormkracht10/backstage/issues",
        "source": "https://github.com/vormkracht10/backstage"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Mark van Eijk",
            "email": "mark@vormkracht10.nl",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "codewithdennis/filament-select-tree": "^3.1",
        "filament/filament": "^3.2",
        "reedware/laravel-composite-relations": "^4.0",
        "spatie/laravel-package-tools": "^1.15.0",
        "spatie/schema-org": "^3.23",
        "vormkracht10/filament-media-picker": "dev-main",
        "vormkracht10/filament-redirects": "dev-main"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.9",
        "larastan/larastan": "^2.0.1",
        "orchestra/testbench": "^8.0",
        "pestphp/pest": "^2.1",
        "pestphp/pest-plugin-arch": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Vormkracht10\\Backstage\\": "src/",
            "Vormkracht10\\Backstage\\Database\\Factories\\": "database/factories/",
            "Vormkracht10\\Backstage\\Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vormkracht10\\Backstage\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Vormkracht10\\Backstage\\BackstageServiceProvider",
                "Vormkracht10\\Backstage\\BackstagePanelProvider"
            ],
            "aliases": {
                "Backstage": "Vormkracht10\\Backstage\\Facades\\Backstage"
            }
        }
    },
    "repositories": {
        "filament-redirects": {
            "type": "path",
            "url": "/var/www/filament-redirects",
            "options": {
                "symlink": true
            }
        },
        "laravel-redirects": {
            "type": "path",
            "url": "/var/www/laravel-redirects",
            "options": {
                "symlink": true
            }
        },
        "filament-media-picker": {
            "type": "path",
            "url": "/var/www/filament-media-picker",
            "options": {
                "symlink": true
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
