{
    "name": "backstage/cms",
    "description": "",
    "keywords": [
        "backstage",
        "cms",
        "vormkracht10",
        "filament",
        "laravel"
    ],
    "homepage": "https://github.com/backstagephp/cms",
    "support": {
        "issues": "https://github.com/backstagephp/cms/issues",
        "source": "https://github.com/backstagephp/cms"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Mark van Eijk",
            "email": "mark@vormkracht10.nl",
            "role": "Developer"
        },
        {
            "name": "Mathieu de Ruiter",
            "email": "mathieu@vormkracht10.nl",
            "role": "Developer"
        },
        {
            "name": "Bas van Dinther",
            "email": "bas@vormkracht10.nl",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "baspa/laravel-timezones": "^1.2",
        "codewithdennis/filament-select-tree": "^3.1",
        "filament/filament": "^3.2",
        "nette/php-generator": "^4.1",
        "reedware/laravel-composite-relations": "^4.0",
        "saade/filament-adjacency-list": "^3.2",
        "spatie/laravel-package-tools": "^1.18",
        "spatie/once": "^3.1",
        "spatie/schema-org": "^3.23",
        "staudenmeir/laravel-adjacency-list": "^1.0",
        "backstage/media": "dev-main",
        "vormkracht10/filament-redirects": "dev-main",
        "backstage/fields": "dev-main"
    },
    "require-dev": {
        "larastan/larastan": "^2.0.1",
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^8.0",
        "orchestra/testbench": "^9.0",
        "pestphp/pest": "^3.7",
        "pestphp/pest-plugin-arch": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Backstage\\": "src/",
            "Backstage\\Tests\\": "tests",
            "Backstage\\Database\\Factories\\": "database/factories/",
            "Backstage\\Database\\Seeders\\": "database/seeders/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Backstage\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Backstage\\BackstageServiceProvider",
                "Backstage\\BackstagePanelProvider"
            ],
            "aliases": {
                "Backstage": "Backstage\\Facades\\Backstage"
            }
        }
    },
    "repositories": {
        "fields": {
            "type": "git",
            "url": "git@github.com:backstagephp/fields.git"
        },
        "media": {
            "type": "git",
            "url": "git@github.com:backstagephp/media.git"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
