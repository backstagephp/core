{
    "private": true,
    "type": "module",
    "scripts": {
        "dev:styles": "npx @tailwindcss/cli --input resources/css/index.css --output resources/dist/backstage.css --watch",
        "dev:scripts": "node bin/build.js --dev",
        "build:styles": "npx @tailwindcss/cli --input resources/css/index.css --output resources/dist/backstage.css --minify && npm run purge",
        "build:scripts": "node bin/build.js",
        "purge": "filament-purge -i resources/dist/backstage.css -o resources/dist/backstage.css -v 3.x",
        "dev": "npm-run-all --parallel dev:*",
        "build": "npm-run-all build:*"
    },
    "devDependencies": {
        "@awcodes/filament-plugin-purge": "^1.1.1",
        "@tailwindcss/cli": "^4.1.11",
        "@tailwindcss/forms": "^0.5.4",
        "@tailwindcss/typography": "^0.5.9",
        "@tailwindcss/vite": "^4.1.10",
        "autoprefixer": "^10.4.14",
        "esbuild": "^0.19.2",
        "laravel-vite-plugin": "1.2.0",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.26",
        "postcss-import": "^15.1.0",
        "prettier": "^3.0.0",
        "prettier-plugin-tailwindcss": "^0.6.13",
        "tailwindcss": "^4.1.11",
        "vite": "^6.2.4"
    }
}
